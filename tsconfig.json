{
    "compilerOptions": {
        "target": "es2017",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noEmitOnError": false,
        "noEmit": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "module": "es6",
        "paths": {
            "ember-octane-todo-list/tests/*": ["tests/*"],
            "ember-octane-todo-list/mirage/*": ["mirage/*"],
            "ember-octane-todo-list/*": ["app/*"],
            "*": ["types/*"]
        }
    },
    "include": ["app/**/*", "tests/**/*", "types/**/*", "mirage/**/*"]
}
